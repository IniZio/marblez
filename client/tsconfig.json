{
  "extends": "../tsconfig.json",
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "*" : ["@types/*"]
    }
  }
}
