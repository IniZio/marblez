{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*" : ["@types/*"]
    },
  },
  "include": [
    "./"
  ],
  "exclude": [
    "node_modules"
  ]
}
