// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb", "filterJson"]
}

// --------------------------------------

model User {
  id             String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  email          String   @unique
  hashedPassword String?
  role           String   @default("USER")

  tokens   Token[]
  sessions Session[]
}

model Session {
  id                 String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId
}

model Token {
  id          String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hashedToken String
  type        String
  // See note below about TokenType enum
  // type        TokenType
  expiresAt   DateTime
  sentTo      String

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  @@unique([hashedToken, type])
}

// NOTE: It's highly recommended to use an enum for the token type
//       but enums only work in Postgres.
//       See: https://blitzjs.com/docs/database-overview#switch-to-postgresql
// enum TokenType {
//   RESET_PASSWORD
// }

model Order {
  id                    String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  row                   Int
  paid                  Boolean   @default(false)
  customerName          String?
  customerPhone         String
  customerSocialChannel String?
  customerSocialName    String?
  deliveryDate          DateTime?
  createdAt             DateTime?
  deliveryTime          String?
  otherAttributes       Json?
  deliveryMethod        String?
  deliveryAddress       String?
  remarks               String?

  // orderMeta OrderMeta?

  @@map(name: "orders")
}

model OrderMeta {
  id String @id @default(dbgenerated()) @map("_id") @db.ObjectId

  // order   Order  @relation(fields: [orderIndex], references: [id])
  // orderIndex String @db.ObjectId
  orderIndex     String

  ingredients Json[]

  materialIds String[]   @db.Array(ObjectId)
  materials   Material[] @relation(fields: [materialIds])
}

model Material {
  id   String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name String

  orderMetaIds String[]      @db.Array(ObjectId)
  orderMetas   OrderMeta[] @relation(fields: [orderMetaIds])
}
